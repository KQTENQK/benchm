<Window x:Class="LLAb2.GPU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LLAb2"
        mc:Ignorable="d"
        Title="GPU" Height="450" Width="800">
    <Grid>
        <Viewport3D>
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,0,10" LookDirection="0,0,-4"/>
            </Viewport3D.Camera>
            <ModelVisual3D x:Name="_light"/>
            <ModelVisual3D x:Name="_meshObjects"/>
        </Viewport3D>
    </Grid>
</Window>
